{% extends "base.twig" %}

{% block title %}{{ news.title }} - TinyCMS{% endblock %}

{% block content %}
<div class="container mt-5">
    {% if news %}
        <div class="card">
            <div class="card-body">
                <h2 class="card-title">{{ news.title }}</h2>
                <p class="card-text">{{ news.content }}</p>
                <p class="card-text">
                    <small class="text-muted">
                        Author: {{ news.author }} | Date: {{ news.created_at }}
                    </small>
                </p>
            </div>
        </div>
    {% else %}
        <p>News article not found.</p>
    {% endif %}
</div>
{% endblock %}