<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}Admin Dashboard{% endblock %}</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" integrity="sha512-SnH5WK+bZxgPHs44uWIX+LLJAJ9/2PkPKZ5QiAj6Ta86w+fsb2TkcmfRyVX3pBnMFcV7oQPJkl9QevSCWr3W6A==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="/admin/template/default/assets/style.css">
    {% block additional_styles %}{% endblock %}
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar -->
            <div class="col-2 sidebar">
                <a href="/admin"><img src="/admin/template/default/assets/logo.png" alt="Logo"></a>
                <nav>
                    <ul>
                        <li class="{% if active_page == 'dashboard' %}active{% endif %}"><a href="/admin"><i class="fa-solid fa-house"></i>Dashboard</a></li>
                        <li class="{% if active_page == 'posts' %}active{% endif %}"><a href="/admin/posts"><i class="fa-solid fa-newspaper"></i>Posts</a></li>
                        <li class="{% if active_page == 'account' %}active{% endif %}"><a href="/admin/account"><i class="fa-solid fa-user"></i>Account</a></li>
                        <li class="{% if active_page == 'characters' %}active{% endif %}"><a href="/admin/characters"><i class="fa-solid fa-file"></i>Characters</a></li>
                        <li class="{% if active_page == 'plugins' %}active{% endif %}"><a href="/admin/plugins"><i class="fa-solid fa-plug"></i>Plugins</a></li>
                        <li class="{% if active_page == 'themes' %}active{% endif %}"><a href="/admin/themes"><i class="fa-solid fa-palette"></i>Themes</a></li>
                        <li class="{% if active_page == 'settings' %}active{% endif %}"><a href="/admin/settings"><i class="fa-solid fa-gear"></i>Settings</a></li>
                    </ul>
                </nav>
            </div>
            <!-- Content -->
            <div class="col-10">
                <!-- Topbar -->
                <div class="row">
                    <div class="col-12 topbar">
                        <div class="float-end info">
                            <a href="/admin/notifications"><i class="fa-solid fa-bell"></i></a>
                            <a href="/admin/messages"><i class="fa-solid fa-envelope"></i></a>
                            <a href="/admin/profile"><i class="fa-solid fa-user"></i></a>
                        </div>
                    </div>
                </div>
                <!-- Page Content -->
                {% block content %}{% endblock %}
            </div>
        </div>
    </div>
    {% block scripts %}{% endblock %}
</body>
</html>